%main-header.main-header
  .header_inner
    .header_inner_top
      %h1.logo
        =link_to root_path do
          = image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?613028459")

      .header_form
        = form_tag search_path, method: :post do
          %input.header_form__textfield{name: "keyword", placeholder: "何かお探しですか？", type: "text", value: ""}
          %button.search-icon
            %i= fa_icon 'search', class: 'loupe-icon icon'
    .header_bottom-crearfix
      .left-contents
        %ul.left-contents_search-nav
          %li.category_nav
            .category-title
              .category_text
                カテゴリーから探す
              .category_icon
                %i= fa_icon 'align-justify', class: 'border-icon icon fa-fw'
            %ul.parent
              - @parents.each do |parent|
                %li
                  = parent.name
                  %ul.child
                    - parent.children.each do |children|
                      %li
                        = children.name
                        %ul.grand-child
                          - children.children.each do |grand_children|
                            %li
                              = grand_children.name
          %li.brand_nav
            .brand_title
              .brand_text
                ブランドから探す
              .brand_icon
                %i= fa_icon 'bookmark', class: 'label-icon icon fa-fw'
            %ul.brand_menu_box
              %li シャネル
              %li ナイキ
              %li ルイヴィトン
              %li シュプリーム
              %li アディダス
              %li ブランド一覧
      - if user_signed_in?
        .right-contents
          .right-contents_user-nav
            %li.right-header_notification
              -# = link_to 'お知らせ' mypage_notification_path do
              -# link先実装後にlink化します
              .right-header_notification_text お知らせ
              .right-header_notification_icon
                %i= fa_icon 'bullhorn', class: 'horn-icon icon fa-fw'
            %li.right-header_todo-list
              -# = link_to 'やることリスト' mypage_todo_path do
              -# link先実装後にlink化します
              .right-header_todo-list_text やることリスト
              .right-header_todo-list_icon
                %i= fa_icon 'check-circle', class: 'check-icon icon fa-fw'
            %li.right-header_mypage-link
              = link_to 'マイページ', mypage_path, style:'text-decoration:none;color:#333333', class:'right-header_mypage-link_text'
              .right-header_mypage-link_icon
                %i= fa_icon 'user-circle', class:'user-icon icon fa-fw'
      - else
        .right-contents
          .right-contents_user-nav
            %li.right-header_log-in
              = link_to 'ログイン', login_path
            %li.right-header_sign-up
              = link_to '新規会員登録', signup_path
